<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".IntroLoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/sub_banner"
        android:layout_marginBottom="40dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:drawableStart="@drawable/rounded_background"
        android:padding="20dp"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:defaultColor="#008EFF"
        app:loaderColor="#ADEDF0" />


    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/naver_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:drawableStart="@drawable/naver"
        android:padding="20dp"
        android:text="네이버로 시작하기"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:defaultColor="#2cd075"
        app:loaderColor="@color/white" />

    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/kakao_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:drawableStart="@drawable/kakao"
        android:padding="20dp"
        android:text="카카오톡으로 시작하기"
        android:textColor="#181600"
        android:textSize="23sp"
        app:defaultColor="#fee500"
        app:loaderColor="#181600" />

</LinearLayout>